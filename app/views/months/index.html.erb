<div class="page-header">
  <h1>
    Months
    <a href="/months/new" class="btn btn-lg btn-success">New Month</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Month</th>
        <th>Actions</th>
      </tr>

      <% @months.each do |month| %>
      <tr>
        <td><%= month.month %></td>
        <td>
          <a href="/months/<%= month.id %>" class="btn btn-primary">Show</a>
          <a href="/months/<%= month.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_month/<%= month.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @months, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
