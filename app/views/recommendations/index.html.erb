<div class="page-header">
  <h1>
    Recommendations
    <a href="/recommendations/new" class="btn btn-lg btn-success">New Recommendation</a>
  </h1>
</div>


<div class="row m-b-2">
  <div class="col-md-12">
    <div>
      <div id="location_map" style="height: 480px;"></div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Recommendation</th>
        <th>Category</th>
        <th>Country</th>
        <th>City</th>
        <th>Address</th>
        <th>Month</th>
        <th>Year</th>
        <th>Trip</th>
        <th>Visited with</th>
        <th>Rating</th>
        <th>Notes</th>
        <th>Photo</th>
        <th>User</th>
        <th>Actions</th>
      </tr>

      <% @recommendations.each do |recommendation| %>
      <tr>
        <td><%= recommendation.recommendation %></td>
        <td><%= recommendation.category.category %></td>
        <td><%= recommendation.country.country %></td>
        <td><%= recommendation.city.city %></td>
        <td><%= recommendation.address %></td>
        <td><%= recommendation.month.month %></td>
        <td><%= recommendation.year.year %></td>
        <td><%= recommendation.trip.trip %></td>
        <td><%= recommendation.visited_with %></td>
        <td><%= recommendation.rating.rating %></td>
        <td><%= recommendation.notes %></td>
        <td><img src='<%= recommendation.photo %>' class='img-responsive'></td>
        <td><%= recommendation.user.created_at %></td>
        <td>
          <a href="/recommendations/<%= recommendation.id %>" class="btn btn-primary">Show</a>
          
          <% if current_user == recommendation.user %>
            <a href="/recommendations/<%= recommendation.id %>/edit" class="btn btn-warning">Edit</a>
            <a href="/delete_recommendation/<%= recommendation.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
          <% end %>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @recommendations, theme: 'twitter-bootstrap-4' %>
  </div>
</div>

<script src="//maps.google.com/maps/api/js?v=3.24&key=AIzaSyCOTPWiuvyyo6sKoIBzKA4-1ol-vTOIOlM"></script>
<script src="//cdn.rawgit.com/mahnunchik/markerclustererplus/master/dist/markerclusterer.min.js"></script>
<script>
  handler = Gmaps.build('Google');
  handler.buildMap({ provider: {}, internal: {id: 'location_map'}}, function(){
    markers = handler.addMarkers(<%= raw @location_hash.to_json %>);
    handler.bounds.extendWith(markers);
    handler.fitMapToBounds();
  });
</script>