<div class="page-header">
  <h1>
    Years
    <a href="/years/new" class="btn btn-lg btn-success">New Year</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Year</th>
        <th>Actions</th>
      </tr>

      <% @years.each do |year| %>
      <tr>
        <td><%= year.year %></td>
        <td>
          <a href="/years/<%= year.id %>" class="btn btn-primary">Show</a>
          <a href="/years/<%= year.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_year/<%= year.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @years, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
